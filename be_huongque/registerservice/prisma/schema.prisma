generator client {
  provider = "prisma-client-js"
  output = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model RegistrationPrisma {
  registration_id      String             @id @default(uuid()) @map("id") @db.Uuid
  useremail            String             @unique @map("useremail")
  image                String[]           @map("image")
  store_name           String             @map("store_name")
  store_address        String             @map("store_address")
  store_sdt            String             @map("store_sdt")
  store_email          String             @unique @map("store_email")
  note                 String?            @map("note")
  status               RegistrationStatusPrisma @default(PENDING) @map("status")
  createdAt            DateTime           @default(now()) @map("created_at") @db.Timestamp(0)
  updatedAt            DateTime           @default(now()) @map("updated_at") @db.Timestamp(0)

  @@map("registration")
}
enum RegistrationStatusPrisma {
  PENDING
  APPROVED
  REJECTED
}